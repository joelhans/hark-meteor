@import 'nib'
@import '_mixins'

orange = rgb(226, 132, 109)
teal   = rgb(58, 128, 130)
purple = rgb(42, 8, 61)
white  = rgb(242, 242, 242)
red    = rgb(237, 91, 71)

*, *:before, *:after
    -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;

html,
body
  height: 100%
  margin: 0

body
  overflow-y: scroll
  background-color: white
  
::selection, 
::-moz-selection
  background: red
  color: white
          
::-webkit-scrollbar
  width: 12px
              
::-webkit-scrollbar-track
  border: 1px solid teal
  border-radius: 10px
                     
::-webkit-scrollbar-thumb
  border-radius: 10px 
  border: 1px solid red

#container
  position: relative
  max-width: 1200px
  margin: 20px auto 0 auto
  clearfix()

.main
  position: relative
  clearfix()

.left
  position: fixed
  float: left
  width: 220px
  height: 400px
  padding-right: 20px
  overflow-x: hidden
  overflow-y: hidden
  &:hover
    overflow-y: auto

.right
  margin-left: 240px

header
  position: relative
  height: 70px
  margin-bottom: 40px

.header-logo
  display: block
  position: relative 
  width: 70px
  height: 70px
  margin: 0
  background: orange
  border-radius: 50%
  text-align: left
  transition-property: width, height
  transition-duration: 0.3s

.header-logo img
  position: relative
  left: 18px
  top: 12px 
  width: 32px
  transition-property: width, height, left, top
  transition-duration: 0.3s

#login-buttons
  absolute top 25px right 0px
  transition-duration: 0s

header.header-mini
  position: fixed
  top: 0px
  height: 36px
  background-color: white
  z-index: 100

.header-mini .header-logo
  width: 28px
  height: 28px
  margin-top: 4px
  &:hover
    cursor: pointer

.header-mini .header-logo img
  relative top 5px left 8px
  width: 12px

.header-mini #login-buttons
  top: 8px

/*
 * Playing
 */

.playing  
  margin-bottom(2.3rem)
  white-space: nowrap

.playing h1
  margin-bottom(1rem)

.playing ul li
  margin-bottom(1rem)
  overflow: hidden
  display: block
  text-overflow: ellipsis

/*
 * Add/update
 */

.add-update
  relative()
  height: 56px
  margin-bottom(2rem)

#add-podcast-form
  float: left
  width: 92px

#add-podcast-form input
  display: none
  width: 197px
  relative top -2px
  padding: 13px
  border: 1px solid orange
  border-radius: 2px

#add-podcast-form button
  absolute top -2px
  color: purple
  background-color: orange
  border-radius: 2px
  border: 0px
  transition-property: color, background-color
  transition-duration: 0.2s
  &:hover
    color: white
    cursor: pointer
    background-color: purple

#add-podcast-form button.add
  padding: 14px 32px 14px 31px

#add-podcast-form button.confirm
  display: none
  left: 151px
  padding: 14px 17px 14px 18px

#update
  relative top 0px right -105px
  display: inline-block
  padding: 14px 20px 14px 20px
  background-color: orange
  border-radius: 2px
  transition-property: color, background-color
  transition-duration: 0.2s
  &:hover
    color: white
    background-color: purple

/*
 * Feeds
 */

.feeds-playlist-switcher
  position: relative

.feed-all
  relative top 0px left 0px
  display: inline-block
  padding: 14px 25px 14px 26px
  background-color: orange
  border-radius: 2px
  transition-property: color, background-color
  transition-duration: 0.2s
  &:hover
    color: white
    background-color: purple

.feed-playlist
  relative top 0px right -10px
  display: inline-block
  padding: 14px 20px 14px 20px
  background-color: orange
  border-radius: 2px
  transition-property: color, background-color
  transition-duration: 0.2s
  &:hover
    color: white
    background-color: purple

.feeds
  absolute top 80px
  white-space: nowrap

.feeds li
  position: relative
  width: 200px
  margin-bottom: 1rem

.feed-view
  width: 180px
  overflow: hidden
  display: block
  text-overflow: ellipsis

.feed-destroy 
  absolute: top 0px right 5px
  opacity: 0.2
  transition-property: opacity
  transition-duration: 0.2s

.feed:hover .feed-destroy
  opacity: 1  

.playlist
  absolute top 80px left 220px
  width: 200px
  
/*
 * Items
 */

#items
  float: left
  width: 75%
  list-style-type: none

.item
  position: relative
  margin: 40px 0 40px 0
  &:first-of-type
    margin: 0px 0 40px 0
  
.item .meta
  display: block
  opacity: 0.2
  transition-property: opacity
  transition-duration: 0.2s
  
.item:hover .meta
  opacity: 1

/*
 * Errors notifications
 */

.notify
  opacity: 0
  position: absolute
  top: -100px
  left: 50%
  margin-left: -250px
  width: 500px
  background-color: red
  color: white
  padding: 20px
  border-radius: 2px
  transition-property: opacity, top
  transition-duration: 0.4s
  &:hover
    cursor: pointer

.error-show
  opacity: 1
  top: 140px

/*
 * Player
 */

#player
  position: fixed
  left: 0px
  bottom: 0px
  width: 100%

.player-audio
  display: none
  margin: 0 auto

.player-video
  display: none
  width: 800px
  height: 450px
  margin: 0 auto

@import "_player"  
@import "_responsive"
